{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "jsx": "react",
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "exclude": [
    "test",
    "release",
    "app/main.prod.js",
    "app/renderer.prod.js",
    "app/dist",
    "dll"
  ],
  "typedocOptions": {
    "inputFiles": ["./app"],
    "out": "typedoc",
    "includeDeclarations": true,
    "excludeExternals": true,
    "name": "Groundy",
    "exclude": [
      "**/dist/**",
      "./app/index.tsx",
      "./app/main.**",
      "./app/menu.ts",
      "./app/rootReducer.ts",
      "./app/store.ts"
    ]
  }
}
